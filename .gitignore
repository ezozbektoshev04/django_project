cat > .gitignore << 'EOF'
# Python
__pycache__/
*.py[cod]
*$py.class
*.so
*.egg-info/
dist/
build/
# Virtual Environment
venv/
env/
.venv/
# Environment Variables (NEVER commit secrets!)
.env
.env.local
.env.production
# Database files
db.sqlite3
*.db
# Docker
docker-compose.override.yml
# IDE
.vscode/
.idea/
*.swp
*.swo
*~
# OS files
.DS_Store
Thumbs.db
# Media and static (collected)
/staticfiles/
/media/
# Logs
*.log
EOF
